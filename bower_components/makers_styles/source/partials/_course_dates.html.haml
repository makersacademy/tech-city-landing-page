%section.hero
  .container
    .centered-row
      %h2 Course Dates
    .centered-row
      %table.responsive-table
        %thead
          %tr
            %th Pre-course Start
            %th Course Start
            %th Hiring Begins
        %tbody
          - Intake.future_dates.each do |intake|
            %tr
              %td{data:{header: "Pre-course Start"}}= intake.precourse_start.strftime("%-d %B %Y")
              %td{data:{header: "Course Start"}}
                %strong= intake.start_date.strftime("%-d %B %Y")
              %td{data:{header: "Hiring Begins"}}= intake.end_date.strftime("%-d %B %Y")
